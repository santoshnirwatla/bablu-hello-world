pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/santoshnirwatla/bablu-hello-world.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Example for a Python Flask app
                sh 'pip3 install -r requirements.txt'
            }
        }

        stage('Deploy to GCP VM') {
            steps {
                sshagent (credentials: ['gcp-key1']) {
                    sh '''
                    scp -o StrictHostKeyChecking=no -r * <ubuntu>@<34.93.95.186>:/home/<ubuntu>/app
                    ssh <ubuntu>@<34.93.95.186> "cd /home/<ubuntu M6
                    +-30
                ][>/app && nohup python3 app.py > app.log 2>&1 &"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Hello World app successfully deployed!'
        }
    }
}
